<head>
  <meta charset="utf-8" />

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

  <title>@Page.Title</title>
  <meta name="description" content="" />
  <meta name="author" content="" />
  
  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- CSS : implied media="all" -->
  @* More info about SquishIt from http://www.codethinked.com/squishit-the-friendly-aspnet-javascript-and-css-squisher *@
  @Html.Raw(SquishIt.Framework.Bundle.Css()
                                     .Add("~/content/normalize.css")
                                     .Add("~/content/reset.css")
                                     .Add("~/content/site.css")
                                     .Add("~/content/media.css")
                                     //.ForceRelease() // Test it out with minification
                                     .Render("~/content/style_#.css"))

  @RenderSection("HeadContent", false)
 
  <!-- More ideas for your <head> here: h5bp.com/docs/#head-Tips -->
    <link rel="icon" href="http://rbeportal.com/favicon.ico" />
    <!--[if IE]>
    <link rel="shortcut icon" href="http://rbeportal.com/favicon.ico" type="image/vnd.microsoft.icon" />
    <![endif]-->

  <!-- All JavaScript at the bottom, except for Modernizr and Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
  <script src="@Url.Content("~/Scripts/modernizr-2.0.min.js")"></script>
  <script src="@Url.Content("~/Scripts/respond.min.js")"></script>
@Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.office2010blue.css").Combined(true).Compress(true))
</head>

<body>
    <div class="main-bg">
        <div class="main-bg-wrap">
            <div id="container">
                <header id="header">
                    <div id="title">
                       <h1 id="logo"><a href="@Url.Content("~/")"><img src="@Url.Content("~/img/logo_en.png")" alt="" /></a></h1>
                    </div>

                    <div id="logindisplay">
                        @Html.Partial("_LogOnPartial")
                        @*&nbsp;*@
                    </div>

                    <div id="menucontainer">
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                        </ul>

                    </div>
                </header>

                <div class="main-wrap">
                    <div id="main" role="main">
                        @RenderBody()
                    </div>
                </div>
            </div> <!--! end of #container -->
        </div>
    </div>
    <footer id="footer">
        <div class="copyright">&copy; No Copyrights!</div>
        <div class="links"><a href="@Url.Content("~/Home/About")">Privacy Policy</a> | <a href="https://github.com/ValtorX/RBEPortal">Source Code</a> | <a href="mailto:info@rbeportal.com">Contact Us</a></div>
    </footer>    

  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script>window.jQuery || document.write("<script src='@Url.Content("~/Scripts/jquery-1.7.1.min.js")'>\x3C/script>")</script>

  @*<script src="@Url.Content("~/Scripts/jquery-1.7.1-vsdoc.js")"></script>
  <script src="@Url.Content("~/Scripts/jquery.validate-vsdoc.js")"></script>*@
  
  @* Add other javascript files here if you want them squished on release *@
  @Html.Raw(SquishIt.Framework.Bundle.JavaScript()
                                           .Add("~/Scripts/plugins.js")
                                           .Add("~/Scripts/script.js")
                                           .Render("~/Scripts/script_#.js"))

  <!-- ADDED: Page Level script sections -->
  @RenderSection("ScriptSection", false)  
  
  <!--[if lt IE 7 ]>
    <script src="@Url.Content("~/Scripts/dd_belatedpng.js")"></script>
    <script>DD_belatedPNG.fix('img, .png_bg'); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
  <![endif]-->

  <!-- mathiasbynens.be/notes/async-analytics-snippet Change UA-XXXXX-X to be your site's ID -->
  <!-- Commented out until you deploy -->
  @*<script>
      var _gaq = [['_setAccount', 'UA-XXXXX-X'], ['_trackPageview']];
      (function (d, t) {
          var g = d.createElement(t), s = d.getElementsByTagName(t)[0]; g.async = 1;
          g.src = ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js';
          s.parentNode.insertBefore(g, s)
      } (document, 'script'));
  </script>*@  
@Html.Telerik().ScriptRegistrar().DefaultGroup(group => group.Combined(true).Compress(true))

    <script type="text/javascript">
        var wResize = function () {
            var wHeight = $(window).height() - 70;
            if ($("body").height() < wHeight)
                $("body").height(wHeight);
        };
        $(document).ready(wResize);
        $(window).resize(wResize);
    </script>
</body>
</html>



